// Obtener el elemento modal
var modal = document.getElementById("modalConsulta");

// Funci칩n para mostrar el modal
function mostrarModal() {
  modal.style.display = "flex";
}

// Funci칩n para cerrar el modal
function cerrarModal() {
  modal.style.display = "none";
}

// Opcional: Cerrar el modal si el usuario hace clic fuera del contenido
window.onclick = function(event) {
  if (event.target == modal) {
    modal.style.display = "none";
  }
}

// Opcional: Manejar el env칤o del formulario (solo simulaci칩n)
document.querySelector('#modalConsulta form').addEventListener('submit', function(e) {
  e.preventDefault();
  
  // Muestra una confirmaci칩n simple al usuario
  alert("춰Solicitud enviada! DespiertaIntuitive se pondr치 en contacto pronto.");
  
  // Cierra el modal y resetea el formulario
  cerrarModal();
  this.reset();
});
